<%- include("partials/header.ejs") %>

<div class="sections">
    <div class="allCards">
        <div class="cards" id="toDo">
            <h1>To do</h1>
            <% if(locals.allTasks){%>
                <ol>
                    <% for(var i = 0 ; i < locals.allTasks.length ; i++){ %>
                         <li id="<%= "task"+ i %>" onclick="clicked(this.id)"><%= locals.allTasks[i] %></li>
                    <% } %>
                </ol>
            <% } else{%>
                <p>Add a task</p>
                <% } %>
        </div>
        <div class="cards" id="doing">
            <h1>Doing</h1>
            <% if (locals.doingTasks) { %>
                <ol>
                    <% for( var j = 0; j < locals.doingTasks.length; j++ ) { %>
                        <li id="<%= "doing" + j %>" onclick="clicked(this.id)"> <%= locals.doingTasks[j] %> </li>
                    <% } %>
                </ol>
            <% } else{ %>
                <p>Do Something Dawg</p>
                <% } %>
        </div>
        <div class="cards" id="done">
            <h1>Done</h1>
        </div>
    </div>
    <form action="/newTask" method="POST">
        <input type="text" name="task" placeholder="Add a Task" id="task">
        <button type="submit" value="submit" id="addButton">Add</button>
    </form>
</div>
<%- include("partials/footer.ejs") %>